<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtividadeViewCell.MainPage">

    <StackLayout>

        <Frame BackgroundColor="#43005E" Padding="25" >
            <Label Text="SMARTPHONES" HorizontalTextAlignment="Center" FontSize="36" FontAttributes="Bold" TextColor="White" />
        </Frame>

        <Frame BorderColor="Black" Margin="10" CornerRadius="20">
            <Entry Placeholder="Digite o fabricante" x:Name="edtFabricante"/>
        </Frame>

        <Frame BorderColor="Black" Margin="10" CornerRadius="20">
            <Entry Placeholder="Digite o modelo" x:Name="edtModelo"/>
        </Frame>

        <Frame BorderColor="Black" Margin="10" CornerRadius="20">
            <Entry Placeholder="Digite a cor" x:Name="edtCor"/>
        </Frame>

        <Button x:Name="btnCadastrar" Text="Cadastrar Smartphone" Clicked="btnCadastrar_Clicked"/>
        <Button x:Name="btnPesquisar" Text="Pesquisar" Clicked="btnPesquisar_Clicked"/>
        <Button x:Name="Finalizar" Text="Finalizar Aplicativo" />

    </StackLayout>

</ContentPage>
